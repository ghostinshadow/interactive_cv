%header#myCarousel.carousel.slide
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      .fill{:style => "background-image:url('#{image_url("landing/face_small")}');"}
      .carousel-caption
        %h2.light_backgroudn_img= "Problem solver"
        = image_tag('landing/idea.svg', width: 120, height: 120, class: "panel-box-ico")

    .item
      .fill{:style => "background-image:url('#{image_url("landing/presentation")}');"}
      .carousel-caption
        %h2.mixed_background_img= "Proactive"
        = image_tag('landing/proactive.svg', width: 120, height: 120, class: "panel-box-ico")
    .item
      .fill{:style => "background-image:url('#{image_url("landing/listener")}');"}
      .carousel-caption
        %h2.dark_background_img= "Team player"
        = image_tag('landing/collaboration.svg', width: 120, height: 120, class: "panel-box-ico")
        
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    %span.icon-prev
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    %span.icon-next

